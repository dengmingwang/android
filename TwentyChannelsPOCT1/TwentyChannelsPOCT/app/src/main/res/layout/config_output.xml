<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">
        <ListView
            android:id="@+id/SendList"
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/bg_layout1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/SingleRight"
                android:layout_width="41dp"
                android:layout_height="33dp"
                android:src="@drawable/btn_bg_right64"
                tools:layout_editor_absoluteX="388dp"
                tools:layout_editor_absoluteY="88dp" />

            <ImageButton
                android:id="@+id/SingleLeft"
                android:layout_width="41dp"
                android:layout_height="33dp"
                android:src="@drawable/btn_bg_left64"
                tools:layout_editor_absoluteX="388dp"
                tools:layout_editor_absoluteY="132dp" />

            <ImageButton
                android:id="@+id/TotalRight"
                android:layout_width="41dp"
                android:layout_height="33dp"
                android:src="@drawable/btn_bg_total642"
                tools:layout_editor_absoluteX="388dp"
                tools:layout_editor_absoluteY="188dp" />

            <ImageButton
                android:id="@+id/TotalLeft"
                android:layout_width="41dp"
                android:layout_height="33dp"
                android:src="@drawable/btn_bg_total641"
                tools:layout_editor_absoluteX="388dp"
                tools:layout_editor_absoluteY="236dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ListView
                android:id="@+id/SendList1"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="288dp"
                android:background="@drawable/bg_layout1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>